{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonJS",
        "outDir": "dist",
        "esModuleInterop": true,
        "rootDirs": [
            "src",
            "tests"
        ],
        "baseUrl": "src",
        "paths": {
            "@/*": [
                "*"
            ]
        },
        "plugins": [
            {
                "transform": "typescript-transform-paths"
            }
        ]
    },
    "include": [
        "src",
        "tests"
    ]
}